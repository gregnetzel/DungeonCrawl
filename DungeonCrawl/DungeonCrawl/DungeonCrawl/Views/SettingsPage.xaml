<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DungeonCrawl.Views.SettingsPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Use server items?" />
            <Switch x:Name="ItemsFromServerSwitch" Toggled="OnUseServerItems"/>
            <Label Text="Random Results" />
            <Switch x:Name="RandomResultsSwitch" IsEnabled="False" Toggled="OnRandomResults"/>
            <Label Text="Super Results" />
            <Switch x:Name="SuperResultsSwitch" IsEnabled="False" Toggled="OnSuperResults"/>
            <Label Text="Debug Settings" />
            <Label Text="Critical Hits" />
            <Switch x:Name="CriticalSwitch" Toggled="OnCriticalSwitch"/>
            <Label Text="Items Allowed?" />
            <Switch x:Name="ItemsUsageSwitch" Toggled="OnItemUsage"/>
            <Label Text="Magic Allowed?" />
            <Switch x:Name="MagicUsageSwitch" Toggled="OnMagicUsage"/>
            <Label Text="Healing Allowed?" />
            <Switch x:Name="HealingUsageSwitch" Toggled="OnHealingUsage" />
            <Label Text="Battle Events" />
            <Switch x:Name="BattleEventsSwitch" Toggled="OnBattleEvents"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>