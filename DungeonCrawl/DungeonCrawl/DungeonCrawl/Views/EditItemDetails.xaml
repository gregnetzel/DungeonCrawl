<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DungeonCrawl.Views.EditItemDetails">
    <ContentPage.Content>
        <StackLayout>
            <Image x:Name="ImageXAML" Aspect="AspectFit" />
            <Entry x:Name="DetailsXAML" FontSize="18" />
            <Entry x:Name="HPXAML" FontSize="18" />
            <Entry x:Name="StrXAML" FontSize="18" />
            <Entry x:Name="DextXAML" FontSize="18" />
            <Entry x:Name="SpeedXAML" FontSize="18" />
            <Button x:Name="SaveItem" Text="Save" IsEnabled="true" Clicked="OnSaveClicked"/>
            <Button x:Name="DeleteItem" Text="Delete" IsEnabled="true" Clicked="OnDeleteClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>