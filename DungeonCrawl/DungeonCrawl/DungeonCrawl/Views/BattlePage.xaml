<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DungeonCrawl.Views.BattlePage">
    <StackLayout>
        <StackLayout Orientation="Horizontal">
            <ListView RowHeight="40" x:Name="PlayerListView"  ItemSelected ="OnPlayerClick">
                <ListView.ItemTemplate>
                    <DataTemplate>                       
                        <TextCell Text="{Binding NameAndHealth}" />                                               
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <ListView RowHeight="40" x:Name="MonsterListView"  ItemSelected ="OnMonsterClick">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding NameAndHealth}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
        <Button x:Name="FightRound" Text="Fight Round" IsEnabled="true" Clicked="OnFightClick"/>
        <ScrollView HorizontalOptions="CenterAndExpand">
            <Label x:Name="GameOut" FontSize="18" />
        </ScrollView>
    </StackLayout>
</ContentPage>