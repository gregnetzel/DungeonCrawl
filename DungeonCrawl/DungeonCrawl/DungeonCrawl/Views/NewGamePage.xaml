<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DungeonCrawl.Views.NewGamePage">
    <StackLayout>
        <Entry x:Name="Player1Name" FontSize="18" Placeholder="Player 1 Name"/>
        <Entry x:Name="Player2Name" FontSize="18" Placeholder="Player 2 Name"/>
        <Entry x:Name="Player3Name" FontSize="18" Placeholder="Player 3 Name"/>
        <Entry x:Name="Player4Name" FontSize="18" Placeholder="Player 4 Name"/>
        <Button x:Name="StartGame" Text="Start Game" IsEnabled="true" Clicked="OnStartClicked"/>
    </StackLayout>
</ContentPage>