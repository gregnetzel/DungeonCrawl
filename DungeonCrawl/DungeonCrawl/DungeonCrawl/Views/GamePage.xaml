<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DungeonCrawl.Views.GamePage"
             Title="Game Page">
    <StackLayout VerticalOptions="FillAndExpand" 
		HorizontalOptions="FillAndExpand" 
		Orientation="Vertical" 
		Spacing="5">

        <Label Text="Definitely Not DND" FontSize="50" HorizontalTextAlignment="Center"/>

        <Image Source="shark.png" />

        <Button x:Name="NewGame" Text="New Game" IsEnabled="true" Clicked="OnNewGame"/>
        <Button x:Name="AutoPlay" Text="Auto Play" IsEnabled="true" Clicked="OnAutoPlay"/>

    </StackLayout>
</ContentPage>